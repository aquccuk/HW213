<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <Button
        android:id="@+id/chooseStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="start|center_vertical"
        android:text="@string/startDate" />

    <Button
        android:id="@+id/chooseEndDate"
        android:layout_below="@+id/chooseStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="start|center_vertical"
        android:text="@string/endDate" />
    <CalendarView
        android:layout_below="@+id/chooseEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startCalendar"
        android:layout_margin="16dp"/>
    <CalendarView
        android:layout_below="@+id/chooseEndDate"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endCalendar"
        android:background="#E2E2E2"/>
    <Button
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/ok"
        android:layout_below="@+id/endCalendar"
        android:layout_alignParentRight="true"/>


</RelativeLayout>